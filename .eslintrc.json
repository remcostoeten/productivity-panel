{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript"
  ],
  "rules": {
    "import/no-restricted-imports": [
      "error",
      {
        "paths": ["node_modules"],
        "patterns": ["node_modules/*"],
        "name": "Link",
        "message": "Please use Link from 'next/link' instead."
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "typescript": {}
    }
  }
}
